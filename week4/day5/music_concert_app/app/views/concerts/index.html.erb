<div class="container">
	<div class="row">

		<div class="col-sm-2">

		</div>

		<div class="col-sm-8">
		<% @concerts = @concerts.sort do |a,b| a.date <=> b.date end %>
		<% @concerts.each do |concert| %>
	    <div class="thumbnail centerthis">
	      <!-- No Image for Now.. can be implemented <img src="..." alt="..."> -->
	      <div class="caption">
	        <h3><%= concert.artist %></h3>
	        <h5><%= concert.date %></h5>
	        <p><%= concert.description %></p>
	        <p><%= link_to "More Details" , "/concerts/#{concert.id}", class: "btn btn-default btn-warning" %></p>
	      </div>
	    </div>
    <% end %>

  </div>


		<div class="col-sm-2">

		</div>

	</div>
</div>