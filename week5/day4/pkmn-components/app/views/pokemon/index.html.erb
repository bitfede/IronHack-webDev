<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-default btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pokename">Feraligtr</span>
          <small class="js-pokeID">#160</small>
          <img class="js-pokeIMG" src="">        
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <div class="row">
          <div class="col-sm-4">
            <dl class="dl-horizontal">
              <dt>Height</dt>
              <dd class="js-pokeheight">23</dd>

              <dt>Weight</dt>
              <dd class="js-pokeweight">888</dd>

              <dt>HP</dt>
              <dd class="js-pokeHP">888</dd>

              <dt>Attack</dt>
              <dd class="js-pokeAttack">888</dd>

              <dt>Defense</dt>
              <dd class="js-pokeDefense">888</dd>

              <dt>Sp. Attack</dt>
              <dd class="js-pokeSpAttack">888</dd>

              <dt>Sp. Defense</dt>
              <dd class="js-pokeSpDefense">888</dd>

              <dt>Speed</dt>
              <dd class="js-pokeSpeed">888</dd>

              <dt>Type</dt>
              <dd class="js-pokeType">888</dd>

            </dl>
          </div>
          <div class="col-sm-2 modalbody-right">
             
          </div>
          <div class="col-sm-4 modalbody-right">
            <p class="pokeDescription">descr</p>
          </div>
          <div class="col-sm-2 modalbody-right">
             
          </div>
      </div>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
